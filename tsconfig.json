{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  }
}
